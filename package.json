{
  "name": "realworld-hono",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "db:local": "docker compose up -d",
    "db:generate": "drizzle-kit generate --config src/core/db/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config src/core/db/drizzle.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.0",
    "hono": "^4.10.8",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0"
  }
